<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp">

    <!-- Stock Icon -->
    <ImageView
        android:id="@+id/stockIcon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/layer_list"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Text "Stocks" -->
    <TextView
        android:id="@+id/stockTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stocks"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintStart_toEndOf="@id/stockIcon"
        app:layout_constraintTop_toTopOf="@id/stockIcon"
        app:layout_constraintBottom_toBottomOf="@id/stockIcon"
        android:layout_marginStart="8dp"/>

    <!-- Search Icon -->
    <SearchView
        android:id="@+id/searchIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:contentDescription="Search"
        app:layout_constraintEnd_toStartOf="@id/qrIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"/>

    <!-- QR Code Icon -->
    <ImageView
        android:id="@+id/qrIcon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/qr_code_svgrepo_com"
        android:contentDescription="QR"
        app:layout_constraintEnd_toStartOf="@id/profileIcon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="16dp"/>

    <!-- Profile Icon -->
    <ImageView
        android:id="@+id/profileIcon"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginEnd="4dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_icon_shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" /> <!-- optional for circular bg -->
</androidx.constraintlayout.widget.ConstraintLayout>
